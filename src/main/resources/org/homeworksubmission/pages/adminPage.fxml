            <TableColumn fx:id="lastNameColumn" prefWidth="187.0" style="-fx-alignment: center-left; -fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #333; -fx-padding: 10px;" text="Last Name" />
            <TableColumn fx:id="usernameColumn" prefWidth="187.0" style="-fx-alignment: center-left; -fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #333; -fx-padding: 10px;" text="Username" />
